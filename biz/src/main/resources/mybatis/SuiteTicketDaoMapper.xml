<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dingtalk.isv.access.biz.dao.SuiteTicketDao">

    <resultMap type="com.dingtalk.isv.access.biz.model.SuiteTicketDO" id="suiteTicketMap">
        <id property="id" column="id" />
        <result property="gmtCreate" column="gmt_create" />
        <result property="gmtModified" column="gmt_modified" />
        <result property="suiteKey" column="suite_key" />
        <result property="suiteTicket" column="ticket" />
    </resultMap>

    <sql id="select-all-fields">
        id,
        gmt_create,
        gmt_modified,
        suite_key,
        ticket
    </sql>

    <insert id="saveOrUpdateSuiteTicket" useGeneratedKeys="true" keyProperty="id">
        insert into isv_suite_ticket (
                gmt_create,
                gmt_modified,
                suite_key,
                ticket
        )values(
                now(),
                now(),
                #{suiteKey},
                #{suiteTicket}
        )ON DUPLICATE KEY UPDATE gmt_modified=now(),ticket=#{suiteTicket}
    </insert>

    <select id="getSuiteTicketByKey" resultMap="suiteTicketMap">
        SELECT <include refid="select-all-fields"/>  FROM isv_suite_ticket
        <![CDATA[
			WHERE suite_key=#{suiteKey}
		 ]]>
    </select>


    <select id="getAllSuiteTicket" resultMap="suiteTicketMap">
        SELECT <include refid="select-all-fields"/>  FROM isv_suite_ticket
    </select>

</mapper>